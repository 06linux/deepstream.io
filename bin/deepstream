#!/usr/bin/env node
'use strict';

require( 'colors' );
const pgk = require( '../package.json' );
// const installer = require( './installer' );

var program = require( 'commander' );

program
	.version( pgk.version )
	.usage( '[command]' )
	.command( 'start', 'start a deepstream server' )
	.command( 'stop', 'stop a running deepstream server' )
	.command( 'status', 'display if a deepstream server is running' )
	.command( 'install', 'install connectors' );

program.parse( process.argv );
