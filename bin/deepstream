#!/usr/bin/env node
'use strict';

require( 'colors' );
const pgk = require( '../package.json' );
// const installer = require( './installer' );

var program = require( 'commander' );

program
	.version( pgk.version )
	.command( 'start [options]', 'start a deepstream server' )
	.command( 'stop', 'stop a running deepstream server' )
	.command( 'install', 'install connectors' );

program.parse( process.argv );
